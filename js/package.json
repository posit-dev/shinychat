{
  "name": "shinychat",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "description": "A Chat component for Shiny",
  "homepage": "https://posit-dev.github.io/shinychat/",
  "bugs": {
    "url": "https://github.com/posit-dev/shinychat/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/posit-dev/shinychat.git"
  },
  "license": "MIT",
  "scripts": {
    "lint": "tsc -noEmit && eslint .",
    "lint:fix": "tsc -noEmit && eslint . --fix",
    "bundle": "tsx build.ts",
    "build": "npm run lint && npm run bundle",
    "watch": "npx nodemon --exec 'npm run build' --ext '*' --ignore dist/ --ignore esbuild-metadata.json",
    "build-fast": "tsx build.ts --minify=false",
    "watch-fast": "npx nodemon --exec 'npm run build-fast' --ext '*' --ignore dist/ --ignore esbuild-metadata.json",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "clipboard": "^2.0.11",
    "dompurify": "^3.2.6",
    "lit": "^3.3.0",
    "preact": "^10.24.3",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.9",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.27.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/preact": "^3.2.4",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "@types/rstudio-shiny": "git+https://git@github.com/rstudio/shiny.git#v1.10.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/ui": "^3.2.1",
    "esbuild": "^0.25.4",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.1.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.1"
  }
}
